{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id_location</th>
                <td>{{ location.getIdLocation() }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ location.dateDebut ? location.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ location.dateFin ? location.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>User ID</th>
                <td>{{ location.getClient().getIdUser()}}</td>
            </tr>
            <tr>
                <th>Voiture ID</th>
                <td>{{ location.getVoiture().getIdVoiture()}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_location_index') }}">back to list</a>

    <a href="{{ path('app_location_edit', {'id_location': location.getIdLocation()}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
