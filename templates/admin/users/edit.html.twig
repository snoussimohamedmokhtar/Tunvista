        <div id="map" class="container" style="height: 700px; width: 700px;"></div>
        <script>
            var maps_link = "{{ user.getMapsLink }}"; // Get the map link from PHP

            // Initialize the map
            var map = L.map('map').setView([0, 0], 13); // Default view

            // Add the base map (e.g., OpenStreetMap)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            // Add a marker to the map
            var marker = L.marker([0, 0]).addTo(map); // Default location

            // Update map view and marker if map link is available
            if (maps_link) {
                var coordinates = maps_link.split(',').map(parseFloat);
                map.setView(coordinates, 13);
                marker.setLatLng(coordinates);
            }


        </script>

