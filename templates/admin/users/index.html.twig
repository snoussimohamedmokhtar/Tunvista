                                    </a>
                                    <a href="{{ path('admin_users_index', {'sortBy': 'lastName', 'sortDirection': 'desc'}) }}">
                                        <span class="bi bi-sort-alpha-down"></span> <!-- Icon for descending order -->
                                    </a>
                                </th>
                                <th scope="col">
                                    Adresse
                                    <a href="{{ path('admin_users_index', {'sortBy': 'adresse'}) }}">
                                        <span class="bi bi-sort-alpha-up"></span> <!-- Icon for ascending order -->
                                    </a>
                                    <a href="{{ path('admin_users_index', {'sortBy': 'adresse', 'sortDirection': 'desc'}) }}">
                                        <span class="bi bi-sort-alpha-down"></span> <!-- Icon for descending order -->
                                    </a>
                                </th>
                                <th scope="col">
                                    Region
                                    <a href="{{ path('admin_users_index', {'sortBy': 'region'}) }}">
                                        <span class="bi bi-sort-alpha-up"></span> <!-- Icon for ascending order -->
                                    </a>
                                    <a href="{{ path('admin_users_index', {'sortBy': 'region', 'sortDirection': 'desc'}) }}">
                                        <span class="bi bi-sort-alpha-down"></span> <!-- Icon for descending order -->
                                    </a>
                                </th>
                                <th scope="col">
                                    Ville
                                    <a href="{{ path('admin_users_index', {'sortBy': 'ville'}) }}">
                                        <span class="bi bi-sort-alpha-up"></span> <!-- Icon for ascending order -->
                                    </a>
                                    <a href="{{ path('admin_users_index', {'sortBy': 'ville', 'sortDirection': 'desc'}) }}">
                                        <span class="bi bi-sort-alpha-down"></span> <!-- Icon for descending order -->
                                    </a>
                                </th>
                                <th scope="col">Roles</th>
                                <th scope="col">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.firstName }}</td>
                                    <td>{{ user.lastName }}</td>
                                    <td>{{ user.adresse }}</td>
                                    <td>{{ user.region }}</td>
                                    <td>{{ user.ville }}</td>
                                    <td>
                                        {% for role in user.roles %}
                                            {% if role == "ROLE_ADMIN"  %}
                                                {% set name = "Admin" %}
                                                {% set color = "danger" %}
                                            {% else %}
                                                {% set name = "Simple User" %}
                                                {% set color = "warning" %}
                                            {% endif %}
                                            <span class="badge bg-{{ color }}">{{ name }}</span>
                                        {% endfor %}
                                    </td>

                                    <td>
                                        <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-lg btn-success btn-sm">Modify</a>
                                        <a href="{{ path('admin_users_delete', {'id': user.id}) }}" class="btn btn-lg btn-danger btn-sm mt-1" onclick="event.preventDefault(); if (confirm('Are you sure you want to delete this user?')) { document.getElementById('delete-form-{{ user.id }}').submit(); }">Delete</a>
                                        <form id="delete-form-{{ user.id }}" action="{{ path('admin_users_delete', {'id': user.id}) }}" method="POST" style="display: none;">
                                            <input type="hidden" name="_method" value="POST">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
