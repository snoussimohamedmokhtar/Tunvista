    <h1 class="m-2">Liste des annonces</h1>

    <table class="table m-5">
        <thead>
            <tr>
                <th>Titre
                    <a href="{{ path('app_annonce_index', {'sortBy': 'titre_a'}) }}">
                        <span class="bi bi-sort-alpha-down"></span> <!-- Icon for ascending order -->
                    </a>
                    <a href="{{ path('app_annonce_index', {'sortBy': 'titre_a', 'sortDirection': 'desc'}) }}">
                        <span class="bi bi-sort-alpha-up"></span> <!-- Icon for descending order -->
                    </a>
                </th>
                <th>Description
                    <a href="{{ path('app_annonce_index', {'sortBy': 'description_a'}) }}">
                        <span class="bi bi-sort-alpha-down"></span> <!-- Icon for ascending order -->
                    </a>
                    <a href="{{ path('app_annonce_index', {'sortBy': 'description_a', 'sortDirection': 'desc'}) }}">
                        <span class="bi bi-sort-alpha-up"></span> <!-- Icon for descending order -->
                    </a>
                </th>
                <th>Ville
                    <a href="{{ path('app_annonce_index', {'sortBy': 'ville_a'}) }}">
                        <span class="bi bi-sort-alpha-down"></span> <!-- Icon for ascending order -->
                    </a>
                    <a href="{{ path('app_annonce_index', {'sortBy': 'ville_a', 'sortDirection': 'desc'}) }}">
                        <span class="bi bi-sort-alpha-up"></span> <!-- Icon for descending order -->
                    </a>
                </th>
                <th>Date
                    <a href="{{ path('app_annonce_index', {'sortBy': 'date_debut'}) }}">
                        <span class="bi bi-sort-numeric-down"></span> <!-- Icon for ascending order -->
                    </a>
                    <a href="{{ path('app_annonce_index', {'sortBy': 'date_debut', 'sortDirection': 'desc'}) }}">
                        <span class="bi bi-sort-numeric-up"></span> <!-- Icon for descending order -->
                    </a>
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            {% if annonce.getDateDebut >= "now"|date("D") %}
                <tr>

                <td>{{ annonce.getTitreA() }}</td>
                <td>{{ annonce.getDescriptionA() }}</td>
                <td>{{ annonce.getVilleA() }}</td>


                <td>{{ annonce.getDateDebut ? annonce.getDateDebut|date('Y-m-d') : '' }}</td>
                <td>
                    <div style="position: relative;">
                        <a href="{{ path('app_annonce_show', {'id_annonce': annonce.getIdAnnonce()}) }}" class="btn btn-primary rounded-3 my-2 mx-1" style="position: absolute; top: 0; right: 220px;">Show</a>
                        <a href="{{ path('app_annonce_edit', {'id_annonce': annonce.getIdAnnonce()}) }}" class="btn btn-warning rounded-3 my-2 mx-1" style="position: absolute; top: 0; right: 160px;">Edit</a>
                        <a href="{{ path('app_annonce_delete', {'id_annonce': annonce.getIdAnnonce()}) }}" class="btn btn-danger rounded-3 my-2 mx-1" style="position: absolute; top: 0; right: 81px;">Delete</a>
                    </div>
                </td>
                </tr>
        {% endif %}

        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



    <div class="m-5" style="position: relative;">
