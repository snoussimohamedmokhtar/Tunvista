                        </form>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <h1>Annonce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_annonce</th>
                <th>Date_debut</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.getIdAnnonce() }}</td>
                <td>{{ annonce.getDateDebut ? annonce.getDateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ annonce.getTypeA }}</td>
                <td>
                    <div style="position: relative;">
                        <a href="{{ path('app_annonce_show', {'id_annonce': annonce.getIdAnnonce()}) }}" class="btn btn-primary rounded-3 my-2 mx-1" style="position: absolute; top: 0; right: 220px;">Show</a>
                        <a href="{{ path('app_annonce_edit', {'id_annonce': annonce.getIdAnnonce()}) }}" class="btn btn-warning rounded-3 my-2 mx-1" style="position: absolute; top: 0; right: 160px;">Edit</a>
                        <a href="{{ path('app_annonce_delete', {'id_annonce': annonce.getIdAnnonce()}) }}" class="btn btn-danger rounded-3 my-2 mx-1" style="position: absolute; top: 0; right: 81px;">Delete</a>
                    </div>






                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div style="position: relative;">
        <a href="{{ path('app_annonce_new') }}" class="btn btn-info rounded-3 my-2 mx-1" style="position: absolute; left: 0;">Create New</a>
        <a href="{{ path('app_annonce_tri') }}" class="btn btn-success rounded-3 my-2 mx-1" style="position: absolute;  left: 115px;">Tri</a>
        <a href="{{ path('app_annonce_pdf') }}" class="btn btn-dark rounded-3 my-2 mx-1" style="position: absolute;  left: 162px;">PDF</a>
    </div>

{% endblock %}
