        <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
        <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-2CmXl1FgaNlGAf8rjzGLyqiZ3bNsHWEL3PvodEzg3A4YMjE8HD82MtoJ3zSZe3FJ" crossorigin="anonymous"></script>
    </head>
<div class="container-fluid position-relative p-0">
    <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
        <a href="" class="navbar-brand p-0">
            <h1 class="text-primary m-0"><i class="fa fa-map-marker-alt me-3"></i>Tourist</h1>
            <!-- <img src="img/logo.png" alt="Logo"> -->
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="fa fa-bars"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto py-0">
                <a href="about.html" class="nav-item nav-link ">About</a>
                <a href="service.html" class="nav-item nav-link">Services</a>
                <a href="package.html" class="nav-item nav-link">Packages</a>
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                    <div class="dropdown-menu m-0">
                        <a href="destination.html" class="dropdown-item">Destination</a>
                        <a href="booking.html" class="dropdown-item">Booking</a>
                        <a href="team.html" class="dropdown-item">Travel Guides</a>
                        <a href="testimonial.html" class="dropdown-item">Testimonial</a>
                        <a href="404.html" class="dropdown-item">404 Page</a>
                    </div>
                </div>
                <a href="contact.html" class="nav-item nav-link">Contact</a>
            </div>
        </div>
    </nav>
    <div class="container-fluid bg-primary py-5 mb-5 hero-header" style="background-image: url('{{ asset('/img/bg-hero.jpg') }}');">
        <div class="container py-5">
            <div class="row justify-content-center py-5">
                <div class="col-lg-10 pt-lg-5 mt-lg-5 text-center">
                    <h1 class="display-3 text-white animated slideInDown">Annonce</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <h1>Annonce</h1>

        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Titre</th>
                        <td>{{ annonce.getTitreA() }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ annonce.getDescriptionA() }}</td>
                    </tr>
                    <tr>
                        <th>Ville</th>
                        <td>{{ annonce.getVilleA() }}</td>
                    </tr>
                    <tr>
                        <th>Date_debut</th>
                        <td>{{ annonce.getDateDebut ? annonce.getDateDebut|date('Y-m-d') : '' }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_annonce_index') }}" class="btn btn-secondary">Back to list</a>
                <a href="{{ path('app_annonce_edit', {'id_annonce': annonce.getIdAnnonce()}) }}" class="btn btn-primary">Edit</a>
                {{ include('annonce/_delete_form.html.twig') }}
            </div>

            <div class="col-md-6">
                <div class="text-center">
                    {% if qrCodes[annonce.getIdAnnonce] is defined %}
                        {{ qrCodes[annonce.getIdAnnonce] | raw }}
                    {% else %}
                        QR Code not available
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div id="map" class="container" style="height: 700px; width: 700px;"></div>
    <script>
        var mapLink = "{{ annonce.getMapsLink }}"; // Get the map link from PHP

        // Initialize the map
        var map = L.map('map').setView([0, 0], 13); // Default view

        // Add the base map (e.g., OpenStreetMap)
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // Add a marker to the map
        var marker = L.marker([0, 0]).addTo(map); // Default location

        // Update map view and marker if map link is available
        if (mapLink) {
            var coordinates = mapLink.split(',').map(parseFloat);
            map.setView(coordinates, 13);
            marker.setLatLng(coordinates);
        }
    </script>
    </div>
{% endblock %}
