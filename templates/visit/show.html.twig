{% extends 'base.html.twig' %}

{% block title %}Visit{% endblock %}

{% block body %}
    <h1>Visit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visit.id }}</td>
            </tr>

            <tr>
                <th>Numero</th>
                <td>{{ visit.Numero }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ visit.nom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ visit.email }}</td>
            </tr>
            <th>Date_visite</th>
            <td>{{ visit.dateVisit | date('Y-m-d ') }}</td>

        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_visit_index') }}">back to list</a>

    <a href="{{ path('app_visit_edit', {'id': visit.getId()}) }}">edit</a>

    {{ include('visit/_delete_form.html.twig') }}
{% endblock %}
