{% extends 'back.html.twig' %}

{% block title %}Voyageur index{% endblock %}

{% block body %}
    <h1>Voyageur Dashboard</h1>
    <div style="display:flex;justify-content:space-between;flex-wrap:wrap;align-items:center">
        <a href="{{ path('app_stat') }} " class="btn btn-success" >Observe Statistic</a>

        <a href="{{ path('app_trieasc') }}" class="btn btn-primary" style="border-radius: 10px;"><span class="bi bi-arrow-up"></span> Sort (Etat Civil) ASC</a>
        <a href="{{ path('app_triedesc') }}" class="btn btn-danger" style="border-radius: 10px;"><span class="bi bi-arrow-down"></span> Sort (Etat Civil) DESC</a>


    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Num Passport</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Age</th>
            <th>Email</th>
            <th>Etat Civil</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for voyageur in voyageurs %}
            <tr>
                <td>{{ voyageur.id }}</td>
                <td>{{ voyageur.NumPass }}</td>
                <td>{{ voyageur.Nom }}</td>
                <td>{{ voyageur.Prenom }}</td>
                <td>{{ voyageur.Age }}</td>
                <td>{{ voyageur.Email }}</td>
                <td>{{ voyageur.EtatCivil }}</td>
                <td>
                    <a href="{{ path('app_voyageur_show', {'id': voyageur.id}) }}" class="btn btn-primary" style="border-radius: 10px;">Show</a>
                    <a href="{{ path('app_voyageur_edit', {'id': voyageur.id}) }}" class="btn btn-warning" style="border-radius: 10px;">edit</a>
                    <a href="{{ path('app_voyageur_delete', {'id': voyageur.id}) }}" class="btn btn-danger" style="border-radius: 10px;">delete</a>
                    <a href="{{ path('mailing', {'id': voyageur.id})}}" class ="btn btn-success"><strong>send Confirmation vol </strong></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center mt-3">
        <a href="{{ path('app_voyageur_new') }}" class="btn btn-success" style="border-radius: 10px;"><span class="bi bi-cart-plus"></span> Create new</a>
    </div>
{% endblock %}
